<?xml version="1.0" encoding="utf-8"?>
<!-- Use FrameLayout or ConstraintLayout as root to enable bottom positioning -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="@dimen/spacing_xxlarge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_medium">

            <!-- Main Price Display -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/text_hero"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/text_primary"
                android:includeFontPadding="false"
                android:letterSpacing="-0.02"
                android:contentDescription="@string/desc_price_content"/>

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_updated_default"
                android:textSize="@dimen/text_small"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="@dimen/spacing_medium"
                android:importantForAccessibility="yes"/>

            <!-- Visual Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_line"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:layout_marginBottom="@dimen/spacing_xlarge"
                android:importantForAccessibility="no"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                android:text="@string/header_configuration"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_small"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"/>

            <!-- Alert Buttons Side by Side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_large">

                <!-- Pump Alert Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="8dp">

                    <Button
                        android:id="@+id/btnSetPumpAlert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_pump"
                        android:textSize="@dimen/text_body"
                        android:backgroundTint="@color/selector_btn_pump"
                        android:textColor="@color/btn_background"
                        android:fontFamily="sans-serif-medium"
                        android:minHeight="@dimen/min_touch_target"
                        android:stateListAnimator="@null"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/tvPumpAlertStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_pump_none"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/text_tertiary"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp"/>

                    <ImageView
                        android:id="@+id/ivPumpIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:visibility="invisible"
                        android:contentDescription="@string/pump_alert_icon"/>

                </LinearLayout>

                <!-- Dump Alert Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp">

                    <Button
                        android:id="@+id/btnSetDumpAlert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_dump"
                        android:textSize="@dimen/text_body"
                        android:backgroundTint="@color/selector_btn_dump"
                        android:textColor="@color/btn_background"
                        android:fontFamily="sans-serif-medium"
                        android:minHeight="@dimen/min_touch_target"
                        android:stateListAnimator="@null"
                        android:layout_marginBottom="@dimen/spacing_small"/>

                    <TextView
                        android:id="@+id/tvDumpAlertStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_dump_none"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/text_tertiary"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_marginBottom="4dp"/>

                    <ImageView
                        android:id="@+id/ivDumpIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:visibility="invisible"
                        android:contentDescription="@string/dump_alert_icon"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Dark Mode Toggle - Fixed at bottom center -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="@dimen/spacing_large"
        android:background="@color/background_main">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_mode"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/spacing_small"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color" />
    </LinearLayout>

    <!-- Info Icon - Fixed at bottom right -->
    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_large"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_dialog_info"
        android:contentDescription="@string/information"
        app:tint="@color/text_secondary" />

    <!-- Settings/Audio Icon - Fixed at bottom left -->
    <ImageButton
        android:id="@+id/btnAudioSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/spacing_large"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:contentDescription="@string/audio_settings"
        app:tint="@color/text_secondary" />

</FrameLayout>